doctype html
html(lang=$localeName)

  head

    title #{$i18n.title}

    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1, shrink-to-fit=no')
    meta(name='description', content='Sealfie la premier compagnon digital de protection contre l\'arnaque au faux pr√©sident. Le premier type de fraude visant les entreprises.')
    meta(name='author', content='nicolas.thomas@inkan.link')


    link(rel='canonical', href='https://sealf.ie/'+$localeName+'/documentation.html')
    link(rel='icon', type='image/x-icon', href='/assets/favicon.svg')

    // Bootstrap icons
    link(href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css", rel='stylesheet')

    // Google fonts
    link(rel='preconnect', href='https://fonts.gstatic.com')
    link(href='https://fonts.googleapis.com/css2?family=Newsreader:ital,wght@0,600;1,600&display=swap', rel='stylesheet')
    link(href='https://fonts.googleapis.com/css2?family=Mulish:ital,wght@0,300;0,500;0,600;0,700;1,300;1,500;1,600;1,700&display=swap', rel='stylesheet')
    link(href='https://fonts.googleapis.com/css2?family=Kanit:ital,wght@0,400;1,400&display=swap', rel='stylesheet')

    // Core theme CSS (includes Bootstrap)
    link(href='/css/styles.css', rel='stylesheet')


  body#page-top
    // Navigation
    nav#mainNav.navbar.navbar-expand-lg.navbar-light.fixed-top.shadow-sm
      .container.px-5
        a.navbar-brand.fw-bold(href='/') Sealfie #{$i18n.banner.main}
        button.navbar-toggler(type='button', data-bs-toggle='collapse', data-bs-target='#navbarResponsive', aria-controls='navbarResponsive', aria-expanded='false', aria-label='Toggle navigation')
          | Menu
          i.bi-list
        #navbarResponsive.collapse.navbar-collapse
          ul.navbar-nav.ms-auto.me-4.my-3.my-lg-0
            li.nav-item
              a.nav-link.me-lg-3(href='pricing.html') #{$i18n.banner.pricing}
            li.nav-item
              a.nav-link.me-lg-3(href='documentation.html') #{$i18n.banner.docs}
          a.btn.btn-primary.rounded-pill.px-3.mb-2.mb-lg-0.button(href="https://mailing.sealf.ie/antichambre")
            span.d-flex.align-items-center
              i.bi-envelope-fill.me-2
              span.small #{$i18n.banner.action}

    // Doc Title
    aside.text-center.bg-gradient-primary-to-secondary
      .container.px-5
        .row.gx-5.justify-content-center
          .col-l-8
            .h3.fs-1.text-white.mb-4 #{$i18n.docs.title}
            img(src='/assets/favicon.svg', alt='...', style='height: 6rem;', href='https://inkan.link')
          .col-l-18
            .h3.fs-2.text-white.mb-4
          .col-l-18
            .h3.fs-2.text-white.mb-4 #{$i18n.docs.subtitle}
    // Mashead header
    header.masthead
      .container.px-5
        .row.gx-5.align-items-center
          .col-lg-6.mb-5.mb-lg-0
            .container-fluid.px-5
              .row.gx-5
                .col-md-6.mb-5
                  // Feature item list is at: https://icons.getbootstrap.com/
                  .text-center
                    i.bi-1-square.icon-feature.text-gradient.d-block.mb-3
                    p.text-muted.mb-0 #{$i18n.docs.stepstart.one}
                .col-md-6.mb-5
                  // Feature item
                  .text-center
                    i.bi-2-square.icon-feature.text-gradient.d-block.mb-3
                    p.text-muted.mb-0 #{$i18n.docs.stepstart.two}
              .row
                .col-md-6.mb-5.mb-md-0
                  // Feature item
                  .text-center
                    i.bi-3-square.icon-feature.text-gradient.d-block.mb-3
                    p.text-muted.mb-0 #{$i18n.docs.stepstart.tree}
                .col-md-6
                  // Feature item
                  .text-center
                    i.bi-fingerprint.icon-feature.text-gradient.d-block.mb-3
                    p.text-muted.mb-0 #{$i18n.docs.stepstart.biometric}
          .col-lg-6
            // Masthead device mockup feature
            .masthead-device-mockup
              include includes/gradient-circle
              include includes/shape-1
              include includes/shape-2
              .device-wrapper
                .device(data-device='iPhoneX', data-orientation='portrait', data-color='black')
                  .screen.bg-black

                    // PUT CONTENTS HERE:
                    // * * This can be a video, image, or just about anything else.
                    // * * Set the max width of your media to 100% and the height to
                    // * * 100% like the demo example below.
                    video(muted='muted', autoplay='', loop='', style='max-width: 100%; height: 100%;')
                      source(src="/assets/img/"+$i18n.docs.stepstart.video, type='video/webm')

    // Doc separation
    aside.text-center.bg-gradient-primary-to-secondary
      .container.px-5
        .row.gx-5.justify-content-center
          .col-l-18
            .h3.fs-2.text-white.mb-4 #{$i18n.docs.intersteps}


    // App features section
    section#validate
      .container.px-5
        .row.gx-5.align-items-center
          .col-lg-8.order-lg-1.mb-5.mb-lg-0
            .container-fluid.px-5
              .row.gx-5
                .col-md-6.mb-5
                  // Feature item list is at: https://icons.getbootstrap.com/
                  .text-center
                    i.bi-1-circle.icon-feature.text-gradient.d-block.mb-3
                    p.text-muted.mb-0 #{$i18n.docs.stepvalidate.one}
                .col-md-6.mb-5
                  // Feature item
                  .text-center
                    i.bi-2-circle.icon-feature.text-gradient.d-block.mb-3
                    p.text-muted.mb-0 #{$i18n.docs.stepvalidate.two}
              .row
                .col-md-6.mb-5.mb-md-0
                  // Feature item
                  .text-center
                    i.bi-3-circle.icon-feature.text-gradient.d-block.mb-3
                    p.text-muted.mb-0 #{$i18n.docs.stepvalidate.tree}
                .col-md-6
                  // Feature item
                  .text-center
                    i.bi-fingerprint.icon-feature.text-gradient.d-block.mb-3
                    p.text-muted.mb-0 #{$i18n.docs.stepvalidate.biometric}
          .col-lg-4.order-lg-0
            // Features section device mockup
            .features-device-mockup
              include includes/gradient-circle
              include includes/shape-1
              include includes/shape-2
              .device-wrapper
                .device(data-device='iPhoneX', data-orientation='portrait', data-color='black')
                  .screen.bg-black
                    // PUT CONTENTS HERE:
                    // * * This can be a video, image, or just about anything else.
                    // * * Set the max width of your media to 100% and the height to
                    // * * 100% like the demo example below.
                    video(muted='muted', autoplay='', loop='', style='max-width: 100%; height: 100%;')
                      source(src='/assets/img/'+ $i18n.docs.stepvalidate.video , type='video/webm')


    // Completed
    section#download.bg-gradient-primary-to-secondary
      .container.px-5
        h2.text-center.text-white.font-alt.mb-4 #{$i18n.docs.completed}

    // Footer
    footer.bg-black.text-center.py-5
      .container.px-5
        .text-white-50.small
          .mb-2 &copy; 2022 Inkan.link . All Rights Reserved.
          a(href='privacy-ios.html') Privacy
          span.mx-1 &middot;
          a(href='#!') Terms
          span.mx-1 &middot;
          a(href='https://www.allianz-trade.fr/actualites/etude-fraude-2021.html') [1] Etude Allianz

    include includes/convertkit-modal.pug

    // Bootstrap core JS
    script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js')

    // Core theme JS
    script(src='/js/scripts.js')

