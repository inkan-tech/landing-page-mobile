                  div(class="benefit-tag inline-block px-3 py-1 bg-green-100 text-green-800 rounded-full text-sm font-medium") #{$i18n.documentation.ceo.step2.benefit}

              div(class="step-item bg-gray-50 rounded-lg p-6")
                div(class="step-header flex items-start space-x-4 mb-4")
                  div(class="step-icon flex-shrink-0")
                    div(class="w-12 h-12 bg-shu-primary text-white rounded-full flex items-center justify-center font-bold text-xl")
                      | 3
                  div(class="step-content flex-1")
                    h4(class="step-title text-xl font-semibold mb-2") #{$i18n.documentation.ceo.step3.title}
                    p(class="step-description text-gray-600") #{$i18n.documentation.ceo.step3.description}
                div(class="step-benefits")
                  div(class="benefit-tag inline-block px-3 py-1 bg-green-100 text-green-800 rounded-full text-sm font-medium") #{$i18n.documentation.ceo.step3.benefit}

              div(class="step-item bg-gray-50 rounded-lg p-6")
                div(class="step-header flex items-start space-x-4 mb-4")
                  div(class="step-icon flex-shrink-0")
                    svg(class="w-8 h-8 text-shu-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24")
                      path(stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 11c0 3.517-1.009 6.799-2.753 9.571m-3.44-2.04l.054-.09A13.916 13.916 0 008 11a4 4 0 118 0c0 1.017-.07 2.019-.203 3m-2.118 6.844A21.88 21.88 0 0015.171 17m3.839 1.132c.645-2.266.99-4.659.99-7.132A8 8 0 008 4.07M3 15.364c.64-1.319 1-2.8 1-4.364 0-1.457.39-2.823 1.07-4.")
                  div(class="step-content flex-1")
                    h4(class="step-title text-xl font-semibold mb-2") #{$i18n.documentation.ceo.step4.title}
                    p(class="step-description text-gray-600") #{$i18n.documentation.ceo.step4.description}
                div(class="step-benefits")
                  div(class="benefit-tag inline-block px-3 py-1 bg-green-100 text-green-800 rounded-full text-sm font-medium") #{$i18n.documentation.ceo.step4.benefit}


    
    // Final CTA Section - Tailwind 4
    section(class="documentation-cta-section py-16 section-ma bg-gray-50")
      div(class="container mx-auto px-5")
        div(class="max-w-5xl mx-auto")
          div(class="text-center")
            h2(class="text-3xl lg:text-4xl font-bold text-gray-900 mb-6")
              span #{$i18n.documentation.final_cta.title}
            p(class="section-subtitle mb-8") #{$i18n.documentation.final_cta.subtitle}

            div(class="cta-buttons")
              div(class="grid grid-cols-1 md:grid-cols-2 gap-6 max-w-2xl mx-auto")
                div(class="mb-4 md:mb-0")
                  a(class="cta-primary-large inline-block w-full" href="mailto:contact@sealf.ie" aria-label="#{$i18n.documentation.final_cta.primary_aria}")
                    | #{$i18n.documentation.final_cta.primary_text}
                div(class="mb-4 md:mb-0")
                  a(class="cta-secondary inline-block w-full" href="/#{$localeName}/pricing.html" aria-label="#{$i18n.documentation.final_cta.secondary_aria}")
                    | #{$i18n.documentation.final_cta.secondary_text}

            div(class="implementation-guarantee mt-8")
              p(class="guarantee-text text-gray-600") #{$i18n.documentation.final_cta.guarantee}

    include ../pug/includes/footer.pug

    // Common scripts (Bootstrap, Core theme, Language detection)
    include includes/common-scripts.pug
