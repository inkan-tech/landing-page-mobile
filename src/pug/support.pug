doctype html
html(lang=$localeName)

  head
    //- Common headers shared across all pages
    include includes/common-headers.pug
    
    //- Page-specific meta tags
    title #{$i18n.footer.navigation.support.title} | #{$i18n.title}
    meta(name='description', content=$i18n.meta.descriptions.support)
    
    //- Page-specific canonical link
    link(rel='canonical', href='https://sealf.ie/'+$localeName+'/support.html')
    script(id="mcjs")
        include ../js/mailchimp-popup.js

  body#page-top
    include ../pug/includes/navbar.pug

    // Call to action section
    section.support
      .support-content
        .container.px-5
          h2.text-white.display-1.lh-1.mb-4
            | #{$i18n.support}
          a.btn.btn-outline-light.py-3.px-4.rounded-pill(href=`mailto:support@sealf.ie?subject=Issue found with Sealfie`, target='_blank') Email support

    include ../pug/includes/footer.pug



    // Bootstrap core JS
    script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js')

    // Core theme JS
    script(src='/js/scripts.js')

