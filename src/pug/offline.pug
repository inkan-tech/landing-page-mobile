doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1, shrink-to-fit=no')
    title Offline | Sealfie app
    link(rel='icon', type='image/x-icon', href='/assets/favicon.svg')
    style.
      body {
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        display: flex;
        align-items: center;
        justify-content: center;
        min-height: 100vh;
        margin: 0;
        text-align: center;
        padding: 20px;
      }
      .offline-container {
        max-width: 500px;
      }
      h1 {
        font-size: 3rem;
        margin-bottom: 1rem;
      }
      p {
        font-size: 1.25rem;
        margin-bottom: 2rem;
        opacity: 0.9;
      }
      .btn {
        display: inline-block;
        padding: 12px 32px;
        background: white;
        color: #667eea;
        text-decoration: none;
        border-radius: 50px;
        font-weight: 600;
        transition: transform 0.2s;
      }
      .btn:hover {
        transform: scale(1.05);
      }
      .icon {
        font-size: 5rem;
        margin-bottom: 1rem;
        opacity: 0.8;
      }

