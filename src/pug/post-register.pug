doctype html
html(lang=$localeName)

  head
    //- Common headers shared across all pages
    include includes/common-headers.pug
    
    //- Page-specific meta tags
    title #{$i18n.post_register.title} | #{$i18n.title}
    meta(name='description', content=$i18n.meta.descriptions.post_register)
    
    //- Page-specific canonical link
    link(rel='canonical', href='https://sealf.ie/'+$localeName+'/post-register.html')

    //- Open Graph meta tags for social sharing
    meta(property='og:title', content=$i18n.post_register.title + ' | ' + $i18n.title)
    meta(property='og:description', content=$i18n.meta.descriptions.post_register)
    meta(property='og:image', content='https://sealf.ie/assets/img/sealfie-screenshot-1.png')
    meta(property='og:url', content='https://sealf.ie/'+$localeName+'/post-register.html')
    meta(property='og:type', content='website')
    meta(property='og:site_name', content='Sealfie')
    meta(property='og:locale', content=$localeName == 'en' ? 'en_US' : 'fr_FR')

    //- Twitter Card meta tags
    meta(name='twitter:card', content='summary_large_image')
    meta(name='twitter:site', content='@sealfieapp')
    meta(name='twitter:title', content=$i18n.post_register.title + ' | ' + $i18n.title)
    meta(name='twitter:description', content=$i18n.meta.descriptions.post_register)
    meta(name='twitter:image', content='https://sealf.ie/assets/img/sealfie-screenshot-1.png')

    //- Structured Data (Schema.org JSON-LD)
    script(type='application/ld+json').
      {
        "@context": "https://schema.org",
        "@graph": [
          {
            "@type": "WebPage",
            "@id": "https://sealf.ie/#{$localeName}/post-register.html#webpage",
            "url": "https://sealf.ie/#{$localeName}/post-register.html",
            "name": "#{$i18n.post_register.title} | #{$i18n.title}",
            "description": "#{$i18n.meta.descriptions.post_register}",
            "inLanguage": "#{$localeName}",
            "isPartOf": {
              "@id": "https://sealf.ie/#website"
            }
          }
        ]
      }

  body#page-top
    // Navigation - Tailwind + Japanese Design System
    include includes/navbar.pug

    // Quote/testimonial aside - Japanese styling
    aside.text-center.section-ma(style="background: linear-gradient(135deg, var(--shu-primary) 0%, var(--sango-accent) 100%);")
      div(class="container mx-auto px-5")
        div(class="grid justify-center")
          div(class="lg:col-span-8")
            h1(class="text-4xl font-bold text-white mb-6") #{$i18n.post_register.main}
            img(src='/assets/img/InkanLogo-32x32.svg', alt='Inkan Logo', class='h-24 mx-auto', href='https://inkan.link')

    // App badge section - Japanese styling
    section#download.section-ma(style="background: linear-gradient(135deg, var(--enji-secondary) 0%, var(--shu-primary) 100%);")
      div(class="container mx-auto px-5")
        h2(class="text-center text-white text-3xl font-bold mb-8") #{$i18n.appstore.download}
        div(class="flex flex-col lg:flex-row items-center justify-center gap-6")
          a(href='https://play.google.com/store/apps/details?id=link.inkan.sealfie', class='hover:-translate-y-1 transition-transform duration-300')
            img.app-badge(src='/assets/img/google-play-badge.svg', alt='Get it on Google Play', class='h-16')
          a(href='https://apps.apple.com/app/id1635309517', class='hover:-translate-y-1 transition-transform duration-300')
            img.app-badge(src='/assets/img/app-store-badge.svg', alt='Download on the App Store', class='h-16')

    include ../pug/includes/footer.pug

    // Japanese Design System - No Bootstrap dependency

    // Core theme JS
    script(src='/js/scripts.js')

