doctype html
html(lang=$localeName)

  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1, shrink-to-fit=no')
    meta(name='description', content='Sealfie la premier compagnon digital de protection contre l\'arnaque au faux pr√©sident. Le premier type de fraude visant les entreprises.')
    meta(name='author', content='nicolas.thomas@inkan.link')


    title #{$i18n.pricing.title}


    link(rel='canonical', href='https://sealf.ie/'+$localeName+'/'+'pricing.html')

    link(rel='icon', type='image/x-icon', href='/assets/favicon.svg')

    // Bootstrap icons
    link(href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css", rel='stylesheet')

    // Google fonts
    link(rel='preconnect', href='https://fonts.gstatic.com')
    link(href='https://fonts.googleapis.com/css2?family=Newsreader:ital,wght@0,600;1,600&display=swap', rel='stylesheet')
    link(href='https://fonts.googleapis.com/css2?family=Mulish:ital,wght@0,300;0,500;0,600;0,700;1,300;1,500;1,600;1,700&display=swap', rel='stylesheet')
    link(href='https://fonts.googleapis.com/css2?family=Kanit:ital,wght@0,400;1,400&display=swap', rel='stylesheet')

    // Core theme CSS (includes Bootstrap)
    link(href='/css/styles.css', rel='stylesheet')
    script(id="mcjs")
        include ../js/mailchimp-popup.js


  body#page-top
    // Navigation
    nav#mainNav.navbar.navbar-expand-lg.navbar-light.fixed-top.shadow-sm
      .container.px-5
        a.navbar-brand.fw-bold(href='/') Sealfie #{$i18n.banner.main}
        button.navbar-toggler(type='button', data-bs-toggle='collapse', data-bs-target='#navbarResponsive', aria-controls='navbarResponsive', aria-expanded='false', aria-label='Toggle navigation')
          | Menu
          i.bi-list
        #navbarResponsive.collapse.navbar-collapse
          ul.navbar-nav.ms-auto.me-4.my-3.my-lg-0
            li.nav-item
              a.nav-link.me-lg-3(href='pricing.html') #{$i18n.banner.pricing}
            li.nav-item
              a.nav-link.me-lg-3(href='documentation.html') #{$i18n.banner.docs}
          a.btn.btn-primary.rounded-pill.px-3.mb-2.mb-lg-0.button(href="http://eepurl.com/ix1tjg")
            span.d-flex.align-items-center
              i.bi-envelope-fill.me-2
              span.small #{$i18n.banner.action}


    // App features section
    section#pricing
      .container.px-5
        .row.gx-30.align-items-center
          .col-lg-22.order-lg-30.mb-5.mb-lg-0
            .container-fluid.px-5
              .row.gx-5
                .col-md-4.mb-5
                  // Feature item list is at: https://icons.getbootstrap.com/
                  .text-center
                    i.bi-currency-euro.icon-feature.text-gradient.d-block.mb-3
                    h3.font-alt #{$i18n.pricing.cost.title}
                    p.text-muted.mb-0 #{$i18n.pricing.cost.text}
                .col-md-4.mb-5
                  // Feature item
                  .text-center
                    i.bi-person-check.icon-feature.text-gradient.d-block.mb-3
                    h3.font-alt #{$i18n.pricing.users.title}
                    p.text-muted.mb-0 #{$i18n.pricing.users.text}
                .col-md-4.mb-5.mb-md-0
                  // Feature item
                  .text-center
                    i.bi-diagram-3.icon-feature.text-gradient.d-block.mb-3
                    h3.font-alt #{$i18n.pricing.onboard.title}
                    p.text-muted.mb-0 #{$i18n.pricing.onboard.text}
              .row
                .col-md-4.mb-5.mb-md-0
                  // Feature item
                  .text-center
                    i.bi-calendar4-range.icon-feature.text-gradient.d-block.mb-3
                    h3.font-alt #{$i18n.pricing.period.title}
                    p.text-muted.mb-0 #{$i18n.pricing.period.text}
                .col-md-4.mb-5.mb-md-0
                  // Feature item
                  .text-center
                    i.bi-headset.icon-feature.text-gradient.d-block.mb-3
                    h3.font-alt #{$i18n.pricing.support.title}
                    p.text-muted.mb-0 #{$i18n.pricing.support.text}
                .col-md-4.mb-5.mb-md-0
                  // Feature item
                  .text-center
                    i.bi-cpu.icon-feature.text-gradient.d-block.mb-3
                    h3.font-alt #{$i18n.pricing.techno.title}
                    p.text-muted.mb-0 #{$i18n.pricing.techno.text}





    // Call to action section
    section.cta
      .cta-content
        .container.px-5
          h2.text-white.display-1.lh-1.mb-4
            | #{$i18n.contactus.main}
            br
            |#{$i18n.contactus.custom}
          a.btn.btn-outline-light.button.py-3.px-4.rounded-pill(href="#", onClick="showMailChimpPopup()" ) #{$i18n.action.linktext}


    // App badge section
    section#download.bg-gradient-primary-to-secondary
      .container.px-5
        h2.text-center.text-white.font-alt.mb-4 #{$i18n.appstore.download}
        .d-flex.flex-column.flex-lg-row.align-items-center.justify-content-center
          a.me-lg-3.mb-4.mb-lg-0(href='https://play.google.com/store/apps/details?id=link.inkan.sealfie')
            img.app-badge(src='/assets/img/google-play-badge.svg', alt='...')
          a(href='https://apps.apple.com/app/id1635309517')
            img.app-badge(src='/assets/img/app-store-badge.svg', alt='...')

    // Footer
    footer.bg-black.text-center.py-5
      .container.px-5
        .text-white-50.small
          .mb-2 &copy; 2022 Inkan.link . All Rights Reserved.
          a(href='privacy-ios.html') Privacy
          span.mx-1 &middot;
          a(href='#!') Terms
          span.mx-1 &middot;
          a(href='https://www.allianz-trade.fr/actualites/etude-fraude-2021.html') [1] Etude Allianz

    // Bootstrap core JS
    script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js')

    // Core theme JS
    script(src='/js/scripts.js')
