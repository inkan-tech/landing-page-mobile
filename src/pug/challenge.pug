doctype html
html(lang=$localeName)

  head
    //- Common headers shared across all pages
    include includes/common-headers.pug
    
    //- Page-specific meta tags
    title #{$i18n.challenge.title}
    meta(name='description', content=$i18n.challenge.subtitle)
    
    //- Page-specific canonical link
    link(rel='canonical', href='https://sealf.ie/'+$localeName+'/'+'challenge.html')
    script(id="mcjs")
        include ../js/mailchimp-popup.js

  body#page-top
    include includes/navbar.pug

    // Masthead section
    header.masthead
      .container.px-5
        .row.gx-5.align-items-center
          .col-lg-8
            // Masthead text and app badges
            .mb-5.mb-lg-0.text-center.text-lg-start
              h1.display-1.lh-1.mb-3 #{$i18n.challenge.masthead.title}
              p.lead.fw-normal.text-muted.mb-5 #{$i18n.challenge.masthead.subtitle}
              .d-flex.flex-column.flex-lg-row.align-items-center
                a.cta-primary-large(href="mailto:contact@sealf.ie?subject=Challenge%20Gratuit%20de%20Sécurité") #{$i18n.challenge.masthead.cta}
          
          .col-lg-4
            // Masthead illustration
            .text-center
              img.img-fluid.rounded.shadow-lg(src="/assets/img/Cyborg_CEO_DAALE.webp" alt="Cyborg CEO Deepfake Threat")

    // Problem section - False security
    section.py-6
      .container.px-5
        .row.justify-content-center
          .col-lg-10
            .text-center.mb-5
              h2.section-title
                span #{$i18n.challenge.problem.title}
              p.section-subtitle #{$i18n.challenge.problem.subtitle}
            
            .row.justify-content-center
              .col-lg-8
                .card.border-0.shadow-lg.mb-5
                  .card-body.p-4
                    h4.text-center.mb-4.text-muted Vous pensez probablement que :
                    ul.list-unstyled.mb-4
                      each point in $i18n.challenge.problem.points
                        li.mb-3
                          i.bi-check-circle.text-gradient.me-2
                          = point
                    
                    .alert.alert-danger.border-0
                      h5.alert-heading #{$i18n.challenge.problem.reality.title}
                      p.mb-0 #{$i18n.challenge.problem.reality.text}

    // Solution section
    section.bg-light.py-6
      .container.px-5
        .row.justify-content-center
          .col-lg-10
            .text-center.mb-5
              h2.section-title
                span #{$i18n.challenge.solution.title}
              p.section-subtitle #{$i18n.challenge.solution.subtitle}
            
            .row.g-4
              .col-md-4
                .card.h-100.border-0.shadow-sm
                  .card-body.text-center.p-4
                    .mb-3
                      i.bi-search.icon-feature.text-gradient.d-block
                    h4 #{$i18n.challenge.solution.process.step1.title}
                    p.text-muted #{$i18n.challenge.solution.process.step1.description}
              
              .col-md-4
                .card.h-100.border-0.shadow-sm
                  .card-body.text-center.p-4
                    .mb-3
                      i.bi-shield-exclamation.icon-feature.text-gradient.d-block
                    h4 #{$i18n.challenge.solution.process.step2.title}
                    p.text-muted #{$i18n.challenge.solution.process.step2.description}
              
              .col-md-4
                .card.h-100.border-0.shadow-sm
                  .card-body.text-center.p-4
                    .mb-3
                      i.bi-clipboard-check.icon-feature.text-gradient.d-block
                    h4 #{$i18n.challenge.solution.process.step3.title}
                    p.text-muted #{$i18n.challenge.solution.process.step3.description}

    // Benefits section
    section.py-6
      .container.px-5
        .row.justify-content-center
          .col-lg-8
            .text-center.mb-5
              h2.section-title
                span #{$i18n.challenge.benefits.title}
            
            .card.border-0.shadow-lg
              .card-body.p-5
                ul.list-unstyled.mb-0
                  each benefit in $i18n.challenge.benefits.items
                    li.mb-3.d-flex.align-items-start
                      i.bi-star-fill.text-warning.me-3.mt-1
                      span.fw-medium= benefit

    // Testimonial section
    section.bg-light.py-6
      .container.px-5
        .row.justify-content-center
          .col-lg-8
            .text-center
              blockquote.blockquote.mb-4
                p.lead.fst-italic "#{$i18n.challenge.testimonial.quote}"
              figcaption.blockquote-footer
                | #{$i18n.challenge.testimonial.author}

    // Final CTA section
    section.cta
      .cta-content
        .container.px-5
          .text-center
            h2.text-white.display-4.lh-1.mb-3 #{$i18n.challenge.cta.title}
            p.lead.text-white.mb-4 #{$i18n.challenge.cta.subtitle}
            a.cta-primary-large(href="mailto:contact@sealf.ie?subject=Challenge%20Gratuit%20de%20Sécurité", style="background: white; color: var(--shu-primary); border: 2px solid white;") #{$i18n.challenge.cta.button}
            br
            small.text-white-50 #{$i18n.challenge.cta.disclaimer}

    include includes/footer.pug

    // Bootstrap core JS
    script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js')

    // Core theme JS
    script(src='/js/scripts.js')