{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Playwright Tests",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/.bin/playwright",
      "args": [
        "test",
        "--debug",
        "${file}"
      ],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "cwd": "${workspaceFolder}",
      "envFile": "${workspaceFolder}/.env.test",
      "env": {
        "DEBUG": "pw:api",
        "PLAYWRIGHT_BASE_URL": "http://localhost:3000"
      }
    },
    {
      "name": "Debug Japanese Redesign Tests",
      "type": "node", 
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/.bin/playwright",
      "args": [
        "test",
        "japanese-redesign-verification.spec.js",
        "--debug"
      ],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "cwd": "${workspaceFolder}",
      "envFile": "${workspaceFolder}/.env.test"
    },
    {
      "name": "Debug Cultural Authenticity Tests",
      "type": "node",
      "request": "launch", 
      "program": "${workspaceFolder}/node_modules/.bin/playwright",
      "args": [
        "test",
        "cultural-authenticity.spec.js",
        "--debug"
      ],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "cwd": "${workspaceFolder}",
      "envFile": "${workspaceFolder}/.env.test"
    },
    {
      "name": "Debug Theme System Tests",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/.bin/playwright",
      "args": [
        "test", 
        "theme-system-compliance.spec.js",
        "--debug"
      ],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "cwd": "${workspaceFolder}",
      "envFile": "${workspaceFolder}/.env.test"
    },
    {
      "name": "Debug Mobile Navigation",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/.bin/playwright", 
      "args": [
        "test",
        "mobile-navigation.spec.js",
        "--project=Mobile Chrome",
        "--debug"
      ],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "cwd": "${workspaceFolder}",
      "envFile": "${workspaceFolder}/.env.test"
    }
  ]
}
